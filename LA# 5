class mobaylhero():
    def __init__(self, name, role):
        self.name = name
        self.role = role

    def describe(self):
        print(f"{self.name} is a/an {self.role} hero.")

fighter = mobaylhero("Arlott", "fighter")
assassin = mobaylhero("Aamon", "assassin")

fighter.describe()
assassin.describe()